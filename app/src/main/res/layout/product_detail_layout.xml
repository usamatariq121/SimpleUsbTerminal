<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent"
    tools:context=".Activities.ProductDetail">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/prodImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="32dp"
                android:src="@drawable/p6"
                app:layout_constraintEnd_toStartOf="@+id/prodName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/prodName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:inputType="textMultiLine"
                android:text="MnM's Peanut Chocolate Candies 250 cal"
                android:textColor="@color/graycolors"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/Normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/prodImg"
                app:layout_constraintTop_toTopOf="@+id/prodImg" />

            <TextView
                android:id="@+id/prodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/bold"
                android:text="$2.98"
                android:textColor="@color/pricecolor"
                android:textSize="50dp"
                app:layout_constraintStart_toStartOf="@+id/prodName"
                app:layout_constraintTop_toBottomOf="@+id/prodName" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/roundoutline"
                app:cardCornerRadius="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/prodPrice"
                app:layout_constraintTop_toTopOf="@+id/prodPrice">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/roundoutline"
                    android:padding="10dp">

                    <ImageButton
                        android:id="@+id/btnadd"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#03FFFFFF"
                        android:padding="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:src="@drawable/plusselector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView8"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/bold"
                        android:text="1"
                        android:textSize="45dp"
                        android:textColor="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btnadd"
                        app:layout_constraintStart_toEndOf="@+id/btnminus"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/btnminus"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#00FFFFFF"
                        android:padding="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:src="@drawable/minutselector"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btncancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="62dp"
                android:background="@drawable/buttonselector"
                android:fontFamily="@font/bold"
                android:padding="20dp"
                android:paddingStart="70dp"
                android:paddingEnd="70dp"
                android:text="CANCEL"
                android:textSize="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/prodImg"
                app:layout_constraintTop_toBottomOf="@+id/prodPrice" />

            <Button
                android:id="@+id/btnaddtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btncheckoutselector"
                android:fontFamily="@font/bold"
                android:padding="20dp"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="ADD TO CART"
                android:textSize="35dp"
                app:layout_constraintBottom_toBottomOf="@+id/btncancel"
                app:layout_constraintEnd_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/btncancel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>